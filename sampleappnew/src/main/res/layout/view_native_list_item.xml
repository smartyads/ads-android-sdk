<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="16dp"
      >
    <ImageView
        android:id="@+id/native_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/native_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="72dp"
        android:layout_marginStart="64dp"
        android:fontFamily="sans-serif"
        android:textSize="16sp"

        />

    <TextView
        android:id="@+id/native_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/native_title"
        android:layout_marginEnd="72dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="72dp"
        android:layout_marginStart="64dp"
        android:textSize="12sp"
        android:ellipsize="end"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/native_sponsor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/native_description"
        android:layout_marginEnd="72dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="72dp"
        android:layout_marginStart="64dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:gravity="end"
        android:textSize="10sp"
        />

    <Button
        android:id="@+id/native_button"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/holo_green_light"
        android:padding="1dp"
        android:text="Buy"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/native_price"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/native_button"
        android:padding="2dp"
        android:gravity="center_horizontal"
        />
  </RelativeLayout>
</android.support.v7.widget.CardView>